<Window x:Class="Base.frmMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение" Height="200" Width="280" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" >
   
    <StackPanel Name="stack">
        <Image Source="images\вопрос.jpeg" Height="50" Opacity="0.8"/>
        <TextBlock Text="Вы действительно хотите удалить то то?" Name="textblock1" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" />
        <StackPanel Orientation="Horizontal">
            <Button Name="OK" Height="25" Content="ОК" Width="80" Margin="35,15,30,5" Click="OK_Click" IsDefault="True"/>
            <Button Name="Cancel" Height="25" Content="Отмена" Width="80"  Margin="0,15,0,5" Click="Cancel_Click" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
    
</Window>
